.container {
  padding: 40rpx;
  background-color: #f3f4f6;
  min-height: 100vh;
}

.header {
  margin-bottom: 60rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.step-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.form-group {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.input-area {
  width: 100%;
  height: 200rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  background: #f9fafb;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  color: #374151;
}

.btn-primary {
  background: #4f46e5;
  color: white;
  border-radius: 12rpx;
  font-weight: 600;
  width: 100%;
  margin-top: 20rpx;
}

.btn-secondary {
  background: #ffffff;
  color: #374151;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.preview-box {
  background: #1f2937;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 32rpx 0;
  height: 300rpx;
  overflow: hidden;
}

.code-block {
  color: #10B981;
  font-family: monospace;
  font-size: 20rpx;
  word-break: break-all;
}

.success-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #10B981;
  text-align: center;
  margin: 24rpx 0;
}

.link-box {
  background: #ecfdf5;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-top: 32rpx;
  text-align: center;
}

.link-text {
  color: #059669;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}
